
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webpage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style1.css">
    <link rel="stylesheet" href="~/css/style-navbar.css">
</head>
<body>
    @if (Model != null)
    {
        <header>
            <nav class="navbar navbar-expand-md navbar-dark fixed-top">
                <!--navbar-dark bg-dark-->
                <a class="navbar-brand"  href="">Strona Randkowa</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" id="main">Strona główna</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ml-auto" id="kontoUl" style="margin-right: 10%;">
                        <!-- > -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="align-content: center" href="#" id="brak" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Konto
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item"  id="profil" >Profil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Login">Wyloguj</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

        </div>
    </footer>
    @if (Model != null)
    {
        <script>
            document.getElementById("main").onclick = function () { main() };
            document.getElementById("profil").onclick = function () { userProfile() };
        function main() {  window.location = '@Url.Action("Index", "Home")' + "?id="+@Model.IdUser;}
        function userProfile() { window.location = '@Url.Action("UserProfile", "Home")' + "?id="+@Model.IdUser;}
        </script>}
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
